						.friend-contact.contact.flex
							+hidden-input('check')(value='0').friendstate
							label
								+checkbox('check').checkbox
							+autoexpand('name')(placeholder='Contact name', i18nplaceholder='contact_name')
			//- Roll Fortune
			+fortuneroll('Fortune_crew', '{{fortune=1}} {{subtitle=^{roll-l}}} {{title-fortune=1}} {{title=^{fortune}}}', true)(data-i18n='roll_fortune').fortunebutton.borderbutton Roll Fortune
		//- Clocks
		.col100.clocks.white-repcontrol.def-margin
			.specialheader.label(data-i18n='clocks') Clocks
			fieldset.repeating_crewclock
				+makeclock
		+textarea('crew_notes')(data-i18n-placeholder='notes', placeholder='Notes').notes
